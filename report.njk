<!DOCTYPE html>
<html lang="{{lang}}">

<head>
    <meta charset="UTF-8">
    <title>{{ 'title' | translate({ date: date }) }}</title>
    <style>
        :root {
            /* typography */
            --sans: system-ui, -apple-system, 'San Francisco', 'Helvetica Neue', 'Segoe UI', 'Arial', sans-serif;
            --mono: 'Consolas', "Courrier New", 'Courrier', monospace;
            /* global size */
            font-size: 62.5%;
        }

        body {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            font-family: var(--sans);
            font-size: 1.4rem;
            padding: 1rem;
            box-sizing: border-box;
        }

        li {
            margin: 0.8rem 0;
        }

        em {
            display: block;
            font-size: 12px;
            text-indent: 2rem;
            margin-left: 3.8rem;
        }
    </style>
</head>

<body>
    <header>
        <h1>{{ 'title' | translate({ date: date }) }}</h1>
    </header>

    <main>
        <section>
            <h2>{{ 'section_error' | translate({ length: errorsLength }) }}</h2>
            {% for recordId, lines in listErrors %}
            {% set title = lines[0].recordTitle %}
            <h3>{{ title }}</h3>
            <ul>
                {% for line in lines %}
                <li>{{line.about | translate(line.args) | safe }}</li>
                {% endfor %}
            </ul>
            {% endfor %}
        </section>

        <section>
            <h2>{{ 'section_warning' | translate({ length: warningsLength }) }}</h2>
            {% for recordId, lines in listWarnings %}
            {% set title = lines[0].recordTitle %}
            <h3>{{ title }}</h3>
            <ul>
                {% for line in lines %}
                <li>{{line.about | translate(line.args) | safe}}</li>
                {% endfor %}
            </ul>
            {% endfor %}
        </section>
    </main>
</body>

</html>